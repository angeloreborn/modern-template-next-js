// schema.prisma
datasource db {
  provider = "mysql"
  url      = "mysql://root:Admin1001@localhost:3306/next_js_dev"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  username  String   @unique
  role      Role     @default(USER)
  verified  Boolean  @default(false)
  password  String
  name      String?
  surname   String? 
}

enum Role {
  USER
  ADMIN
}

